{% include 'document.twig' %}
{% include '@common/header.twig' %}
<main data-x-align="center" data-y-align="center">

<form
    action="{{ url.api('/auth/register.php') }}"
    method="post"
    class="auth-form"
>
    <h1>Register</h1>

    <h3 data-required="1">E-mail</h3>
    <input type="text" name="email" title="Text" />

    <h3 data-required="1">Password</h3>
    <input type="password" name="password" title="Password" />

    <input type="submit" value="Login">

    {% include '@errors/error.twig' %}
    <a href="{{ url.to('/auth/login.php') }}">Login instead</a>
</form>

</main>
{% include '@common/footer.twig' %}
{% include 'html-end.twig' %}
