{% include 'document.twig' %}
{% include '@common/header.twig' %}
<main data-x-align="center" data-y-align="center">

<form
    action="{{ url.api('/auth/login.php') }}"
    method="post"
    class="auth-form"
>
    <h1>Login</h1>
    <input type="text" name="email" title="Text" />
    <input type="password" name="password" title="Password" />
    <input type="submit" value="Login">

    {% include '@errors/error.twig' %}
    <a href="{{ url.to('/auth/register.php') }}">Register instead</a>
</form>

</main>
{% include '@common/footer.twig' %}
{% include 'html-end.twig' %}
